package Number_pattern;

public class Reverse_number_traingle_pattern { 
	public static void main(String[] args) { 
		
		System.out.println("Reverse number traingle pattern");
		for(int i=1;i<=4;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print(" ");
			}  
			for(int j=i;j<=4;j++) {
				System.out.print(j+" ");
			
		} 
			System.out.println(); 
			
		
		}  
		
		System.out.println("Number traingle pattern");
		for(int i=1;i<=4;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print(j+" ");
			} 
			System.out.println();
		}
		
	}

}
